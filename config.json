{
  "project": {
    "name": "Nuxios",
    "url": "https://nuxios.com",
    "description": "Nuxios is a reservation platform for small businesses."
  },
  "output": {
    "type": "file",
    "options": [
      "console",
      "linkedin",
      "file",
      "all"
    ],
    "console": {
      "enabled": true,
      "format": "detailed"
    },
    "file": {
      "enabled": false,
      "path": "./posts",
      "format": "json"
    },
    "linkedin": {
      "enabled": true,
      "visibility": "PUBLIC",
      "autoPost": true,
      "requireConfirmation": true
    }
  },
  "ai": {
    "model": "gpt-3.5-turbo",
    "language": "french",
    "tone": "motivational",
    "maxTokens": 1000,
    "temperature": 0.7
  },
  "github": {
    "branch": "main",
    "daysToFetch": 7,
    "excludePatterns": [
      "refactor",
      "fix",
      "bug",
      "chore",
      "docs",
      "test",
      "ci",
      "cd"
    ]
  },
  "logging": {
    "level": "info",
    "format": "colored",
    "showProgress": true,
    "showStats": true
  },
  "post": {
    "maxLength": 3000,
    "includeHashtags": true,
    "hashtags": [
      "#tech",
      "#development",
      "#innovation"
    ],
    "callToAction": true,
    "includeEmojis": true
  }
}