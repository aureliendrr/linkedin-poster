{
  "project": {
    "name": "Your Project Name",
    "url": "https://your-project-url.com",
    "description": "A brief description of your project"
  },
  "output": {
    "type": "multiple",
    "options": ["console", "linkedin", "file", "multiple"],
    "console": {
      "enabled": true,
      "format": "detailed"
    },
    "file": {
      "enabled": false,
      "path": "./output/posts",
      "format": "json"
    },
    "linkedin": {
      "enabled": true,
      "visibility": "PUBLIC",
      "autoPost": true,
      "requireConfirmation": true
    }
  },
  "ai": {
    "model": "gpt-3.5-turbo",
    "language": "english",
    "tone": "motivational",
    "maxTokens": 1000,
    "temperature": 0.7
  },
  "github": {
    "branch": "main",
    "daysToFetch": 7,
    "excludePatterns": [
      "refactor",
      "chore",
      "docs",
      "test",
      "ci",
      "cd"
    ]
  },
  "logging": {
    "level": "info",
    "format": "colored",
    "showProgress": true,
    "showStats": true
  },
  "post": {
    "maxLength": 3000,
    "includeHashtags": true,
    "hashtags": ["#tech", "#development", "#innovation"],
    "callToAction": true,
    "includeEmojis": true
  }
} 